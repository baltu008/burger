<h1>In-N-Out... N-In Again...</h1>
<h2>"Eat one or all and eat again!"</h2>

<div id="burger-display">

  <div id="not-eaten">
    <h2>Burgers that have not been eaten</h2>
    <ul>
      {{#each burgers}}
        {{#unless this.devoured}}
          <li>
            {{this.burger_name}}

            <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="devoured" value="true">
              <button type="submit">Eat</button>
            </form>

            
          </li>
        {{/unless}}
      {{/each}}
    </ul>
  </div>

<div class="image">
  <img id="pic" href="/public/assets/img/burger.png">
</div>

  <div id="eaten">
    <h2>Burgers that have been eaten</h2>
    <ul>
      {{#each burgers}}
        {{#if this.devoured}}
          <li>
            {{this.burger_name}}

            <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="devoured" value="false">
              <button type="submit">Regurgitate?</button>
            </form>
          </li>
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>

<div id="add-burger">
  <div id="input">
    <h2>Add a Burger:</h2>
    <form class="create-update-form" action="burgers/create" method="POST">

      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="burger_name">
      </div>

      <button id="add-burger-button" type="submit">Add Burger</button>
    </form>
  </div>
</div>